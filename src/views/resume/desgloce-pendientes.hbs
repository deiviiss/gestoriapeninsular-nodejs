<div class="container-box">

  {{#if_equal user.permiso "Administrador"}}

  <div class="search">
    <form action="/resume-zona" method="POST">
      {{!-- <label for="status" class='label active'>Zona</label> --}}

      <select name="zona" id="zona" class="form-control">
        <option value="">Elige una zona</option>
        {{#each region}}
        <option value="{{zona}}">{{zona}}</option>
        {{/each}}
      </select>

      <button type="submit" class="btn btn-primary fas fa-search ml-2" style="height: 2rem;"></button>

    </form>
  </div>

  {{/if_equal}}

  {{#if_equal user.permiso "Regional"}}

  <div class="search">
    <form action="/resume-zona" method="POST">
      {{!-- <label for="status" class='label active'>Zona</label> --}}

      <select name="zona" id="zona" class="form-control">
        <option value="">Elige una zona</option>
        {{#each region}}
        <option value="{{zona}}">{{zona}}</option>
        {{/each}}
      </select>

      <button type="submit" class="btn btn-primary fas fa-search ml-2" style="height: 2rem;"></button>

    </form>
  </div>

  {{/if_equal}}

  <div class="container p-2">
    <div class="tarjeta">
      <h2 class="resume-title">
        {{user.zona}}
      </h2>

      <h6 class="resume-status">
        Pendientes {{zona}}
      </h6>

      <div class="grid">

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.afore}}?zona={{zona}}">
            <h6 class="tarjeta-title">Afore</h6>
            <p class="tarjeta-text">{{motivos.afore}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.antigüedad}}?zona={{zona}}">
            <h6 class="tarjeta-title">Antigüedad</h6>
            <p class="tarjeta-text">{{motivos.antigüedad}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.cita}}?zona={{zona}}">
            <h6 class="tarjeta-title">Cita</h6>
            <p class="tarjeta-text">{{motivos.cita}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.cobro}}?zona={{zona}}">
            <h6 class="tarjeta-title">Cobro</h6>
            <p class="tarjeta-text">{{motivos.cobro}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.demanda}}?zona={{zona}}">
            <h6 class="tarjeta-title">Demanda</h6>
            <p class="tarjeta-text">{{motivos.demanda}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.documentos}}?zona={{zona}}">
            <h6 class="tarjeta-title">Documentos</h6>
            <p class="tarjeta-text">{{motivos.documentos}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.orden}}?zona={{zona}}">
            <h6 class="tarjeta-title">Orden</h6>
            <p class="tarjeta-text">{{motivos.orden}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.saldos}}?zona={{zona}}">
            <h6 class="tarjeta-title">Saldos</h6>
            <p class="tarjeta-text">{{motivos.saldos}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.tramite}}?zona={{zona}}">
            <h6 class="tarjeta-title">Trámite</h6>
            <p class="tarjeta-text">{{motivos.tramite}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.unificacion}}?zona={{zona}}">
            <h6 class="tarjeta-title">Unificaciones</h6>
            <p class="tarjeta-text">{{motivos.unificacion}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.vigente}}?zona={{zona}}">
            <h6 class="tarjeta-title">Vigente</h6>
            <p class="tarjeta-text">{{motivos.vigente}}</p>
          </a>
        </div>

        <div class="tarjeta-status">
          <a href="/desgloce-pendientes/{{titulos.salud}}?zona={{zona}}">
            <h6 class="tarjeta-title">Salud</h6>
            <p class="tarjeta-text">{{motivos.salud}}</p>
          </a>
        </div>
      </div>

      <h6 class="resume-status">
        Pendientes por fecha trámite
      </h6>

      <div class="grid">

        <div class="tarjeta-fecha week">
          <a href="/pendientes/week?zona={{zona}}">
            <h6 class="tarjeta-title">2 semanas</h6>
            <p class="tarjeta-text">{{cantidadPendientes.pendientesWeek}}</p>
          </a>
        </div>

        <div class="tarjeta-fecha thirty-days">
          <a href="/pendientes/30days?zona={{zona}}">
            <h6 class="tarjeta-title">30 días</h6>
            <p class="tarjeta-text">{{cantidadPendientes.pendientes30Days}}</p>
          </a>
        </div>

        <div class="tarjeta-fecha sixty-days">
          <a href="/pendientes/60days?zona={{zona}}">
            <h6 class="tarjeta-title">60 días</h6>
            <p class="tarjeta-text">{{cantidadPendientes.pendientes60Days}}</p>
          </a>
        </div>

        <div class="tarjeta-fecha more-days">
          <a href="/pendientes/more60days?zona={{zona}}">
            <h6 class="tarjeta-title">+ 60 días</h6>
            <p class="tarjeta-text">{{cantidadPendientes.pendientesMore60Days}}</p>
          </a>
        </div>

      </div>

      <div class="buttons">
        <a href="/customer/" class="btn btn-info btn-edit"><i class="fas fa-users mr-1"></i>Clientes</a>
        <a href="/resume/" class="btn btn-info btn-edit"><i class="fas fa-chart-line mr-1"></i>Resumen</a>
        {{!-- <a href="/profile" class="btn btn-info btn-edit"><i class="fas fa-user-alt mr-1"></i>Perfil</a> --}}
      </div>
    </div>
  </div>
</div>