<div class="container-box">

  <div class="search" id="search">
    <form action="/customer/query" method="post">
      {{!-- <label for="cliente" class="form-label">Cliente</label> --}}
      <input type="search" placeholder="Buscar cliente" name="busqueda" class="form-control" autocomplete="off">
      <button type="submit" class="btn btn-primary fas fa-search" style="height:2rem;"></button>
    </form>
  </div>

  {{# if orden}}
  <div class="buttons btn-order">

    <a href="/resume/" class="btn btn-info btn-space"><i class="fas fa-chart-line mr-1"></i>Resumen</a>

    <form action="/resume/{{status}}" method="POST">

      <button type="submit" class="btn btn-info btn-space"><i class="fas fa-angle-down"></i></button>
    </form>
    <a href="/resume/{{status}}" class="btn btn-info btn-space"><i class="fas fa-angle-up"></i></a>

  </div>

  {{/if}}

  {{# if ordenMotivo}}
  <div class="buttons btn-order">

    <a href="/desgloce-pendientes/" class="btn btn-info btn-space"><i class="fas fa-chart-line mr-1"></i>Resumen</a>

    <form action="/desgloce-pendientes/{{motivo}}" method="POST">

      <button type="submit" class="btn btn-info btn-space"><i class="fas fa-angle-down"></i></button>
    </form>
    <a href="/desgloce-pendientes/{{motivo}}" class="btn btn-info btn-space"><i class="fas fa-angle-up"></i></a>

  </div>

  {{/if}}

  <div class="container p-2">
    <div class="row">
      {{#each customer}}
      <div class="col-md-6 mt-2 mx-auto">
        <div class=" card border-info text-dark bg-light">

          <h5 class="card-header text-muted">Id {{id}}</h5>

          <div class="card-body">

            <h6 class="card-title m-1">Nombre del cliente:</h6>
            <p class="card-text m-1">{{cliente}}</p>
            <h6 class="card-title m-1">Fecha de tr√°mite:</h6>
            <p class="card-text m-1">{{fecha_tramite}}</p>
            <h6 class="card-title m-1">Cantidad a retirar:</h6>
            <p class="card-text m-1">{{monto}}</p>
            <h6 class="card-title m-1">Status:</h6>
            <p class="card-text m-1">{{status}}</p>
            <h6 class="card-title m-1">Zona:</h6>
            <p class="card-text m-1">{{zona}}</p>

            <div class="buttons">
              <a href="/customer/edit/{{id}}" class="btn btn-info">Detalles</a>
            </div>

          </div>
        </div>
      </div>
      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p class="text-center">No se ha realizado ninguna busqueda.</p>
          <a href="/profile">Ir a perfil!</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>


