<div class="container-box">

  <div class="search">
    <form action="/links/query" method="post">
      {{!-- <label for="cliente" class="form-label">Cliente</label> --}}
      <input type="search" placeholder="Buscar cliente" name="busqueda" class="form-control" autofocus>
      <button type="submit" class="btn btn-primary fas fa-search" style="height:2rem;"></button>
    </form>
  </div>

  <div class="container p-4">
    <div class="row">
      {{#each links}}
      <div class="col-md-6 mx-auto">
        <div class="card text-center">
          <div class="card-body">

            <h5 class="card-title m-1">Nombre del cliente</h5>
            <p class="card-text m-1">{{cliente}}</p>
            <h5 class="card-title m-1">Fecha de tr√°mite</h5>
            <p class="card-text m-1">{{fecha_tramite}}</p>
            <h5 class="card-title m-1">Cantidad a retirar</h5>
            <p class="card-text m-1">{{monto}}</p>

          </div>
        </div>
      </div>
      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>No se ha realizado ninguna busqueda.</p>
          <a href="/profile">Ir a perfil!</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>


